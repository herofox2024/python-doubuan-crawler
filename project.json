{
  "name": "豆瓣书评爬虫工具",
  "version": "2.0.0",
  "description": "豆瓣读书收藏和书评数据爬取工具，支持GUI界面、数据库存储和HTML导出",
  "author": "开发者",
  "license": "学习使用",
  "keywords": ["豆瓣", "爬虫", "书评", "数据分析"],
  "features": [
    "GUI图形界面",
    "SQLite数据库存储", 
    "HTML交互式报告",
    "数据搜索筛选",
    "增量更新支持",
    "exe独立打包"
  ],
  "requirements": {
    "python": ">=3.7",
    "requests": ">=2.25.0",
    "beautifulsoup4": ">=4.9.0",
    "pandas": ">=1.3.0",
    "tqdm": ">=4.60.0"
  },
  "scripts": {
    "start": "python main.py",
    "cli": "python main.py --cli",
    "test": "python test_all.py",
    "build": "pyinstaller --clean 豆瓣书评爬虫.spec"
  },
  "files": {
    "main": "main.py",
    "gui": "gui.py", 
    "database": "database.py",
    "crawler": "crawler_with_db.py",
    "exporter": "html_exporter.py",
    "executable": "可执行文件/豆瓣书评爬虫.exe"
  }
}